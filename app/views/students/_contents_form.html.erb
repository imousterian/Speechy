<div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" align="center"> Select emotions </h4>
        </div>

        <div class="modal-body">
            <% tag_selection Content.select_tags(current_user.id) do |tag| %>
                <li>
                    <%= form_for tag, remote: true do  |f| %>
                        <%= f.check_box "selected", :class => 'submittable' %>
                        <%= tag.tagname %>
                    <% end %>
                </li>
            <% end %>

        </div>

        <div class="modal-footer">
            <div class="row text-center">
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-default btn-sm submitme" data-dismiss="modal">Select</button>
            </div>
        </div>
        </div>
</div>


