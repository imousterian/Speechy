
<tr>
    <td>
        <%= link_to student do %>
            Start test for <span class="student-name"> <%= student.name %> </span>
        <% end %>
    </td>

    <td class="col-sm-2"><%= link_to 'Show summary', show_summary_path(student) %></td>
    <td class="col-sm-1"> <%= link_to 'Edit', edit_student_path(student), remote: true, class: "btn btn-primary btn-xs btn-style" %></td>
    <td class="col-sm-1"> <%= link_to 'Del', student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs btn-style" %></td>

</tr>

<div id="student-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" area-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" align="center">Editing student</h4>
            </div>
            <div class="modal-body" id="student-modal-body">
            </div>
            <div class="modal-footer">
                <div class="row text-center">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
