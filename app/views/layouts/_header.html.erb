<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <% if user_signed_in? %>
                <% if current_user.guest? %>
                    <a class="navbar-brand" href="#">Logged in as Guest</a>
                <% else %>
                    <a class="navbar-brand" href="#">Logged in as <%= current_user.email %></a>
                <% end %>
            <% else %>
                <%= link_to "SPEECHY", root_path, class: "navbar-brand" %>
            <% end %>
        </div>

        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav pull-right">
                <li><%= link_to "Home", root_path %></li>
                <% if user_signed_in? %>
                    <% if current_user.admin? %>
                        <li><%= link_to 'Users', users_path %></li>
                    <% end %>
                    <li><%= link_to 'Upload', new_content_path, remote: true %></li>
                    <li><%= link_to 'Students', students_path, "data-no-turbolink" => true %></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <% if current_user.guest? %>
                                <%= render 'static_pages/edit_links' %>
                            <% else %>
                                <li><%= link_to 'Edit profile', edit_user_registration_path %></li>
                                <%= render 'static_pages/edit_links' %>
                            <% end %>
                        </ul>
                    </li>
                <% else %>
                    <li><%= link_to "Login", new_user_session_path %></li>
                    <li><%= link_to "Sign up", new_user_registration_path %></li>
                <% end %>
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</div>

<div id="content-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" area-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" align="center" id="content-modal-title"></h4>
            </div>
            <div class="modal-body" id="modal-body">
            </div>
            <div class="modal-footer">
                <div class="row text-center">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
